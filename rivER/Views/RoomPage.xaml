<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="rivER.RoomPage"
	BackgroundColor="White"
	ControlTemplate="{StaticResource TitleTemplate}">
	<ContentPage.Content>
		<StackLayout
			VerticalOptions="StartAndExpand">
			<StackLayout
				Orientation="Horizontal"
				HorizontalOptions="FillAndExpand">
				<Label
					Text="{Binding CurrentRoomName}"
					Margin="10"
					FontSize="50"
					HeightRequest="80"
					BackgroundColor="Aqua"
					Opacity="75"
					Style="{DynamicResource TitleStyle}"
					VerticalTextAlignment="Center" />
				<ListView
					x:Name="roomState"
					ItemsSource="{Binding FlagColors, Mode=OneWay}"
					SeparatorVisibility="None"
					Rotation="270"
					HeightRequest="80"
					WidthRequest="10">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<BoxView
									Color="{Binding Color}" />
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</StackLayout>
			<ListView
				x:Name="roomView"
				ItemsSource="{Binding Rooms}"
				SeparatorVisibility="None">
				<ListView.ItemTemplate>
					<DataTemplate>
						<Frame
							OutlineColor="Silver">
							<TextCell
								Text="{Binding Name}"
								Detail="{Binding State}">
							</TextCell>
						</Frame>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>